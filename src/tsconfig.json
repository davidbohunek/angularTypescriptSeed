{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./app.ts",
        "./pages/admin/adminController.ts",
        "./pages/admin/users/usersController.ts",
        "./pages/app/appController.ts",
        "./pages/app/catalogue/catalogueController.ts",
        "./pages/app/home/HomeController.ts",
        "./pages/login/loginController.ts"
    ]
}
